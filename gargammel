##simulating more damage
export PERL5LIB=/usr/local/sw/vcftools-0.1.16/src/perl/
perl /usr/local/sw/gargammel/gargammel.pl -c 5.5 --comp 0,0,1 -s /mnt/NEOGENE1/projects/refbias_2020/gargamel/sizedist.size_1.gz -damage 0.024,0.36,0.01455,0.825 -o /mnt/NEOGENE1/projects/refbias_2020/gargamel/chr1/revision_simulations/cov10_moredamage /mnt/NEOGENE1/projects/refbias_2020/gargamel/chr1/data/

##simulating less damage
